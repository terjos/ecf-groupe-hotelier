{% extends 'base.html.twig' %}

{% block title %}
  Nos éstablishments  | {{ parent() }}
{% endblock %}

{% block body %}
  <h1>
    Nos éstablishments
  </h1>

  {% for establishment in establishments %}
    <div class="establishment">

      <div class="establishment-title">
        <h2>
          <a href="{{ path('app_establishment_show', {'id': establishment.id}) }}">
            {{ establishment.name }}
            <span>({{ establishment.city }})</span>
          </a>
        </h2>
      </div>
      <div class="establishment-content">
        <div class="establishment-img">
          <img src="{{ vich_uploader_asset(establishment) | imagine_filter('thumb')}}" alt="{{ establishment.name }}">
        </div>
        <div class="establishment-description">
          <p>
            {{ establishment.description | length > 400 ? establishment.description | slice(0, 400) ~ '...' : establishment.description }}
          </p>
          <a class="btn" href="{{ path('app_establishment_show', {'id': establishment.id}) }}">
              Voir l'établissement et ses suites
          </a>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}
